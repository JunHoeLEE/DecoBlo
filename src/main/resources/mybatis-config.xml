<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- com.decoblog.www.user -->
		<typeAlias type="com.decoblog.www.user.vo.User" alias="User" />
		<typeAlias type="com.decoblog.www.user.vo.Subscribe" alias="Subscribe" />
		
		<!-- com.decoblog.www.blog -->
		<typeAlias type="com.decoblog.www.blog.vo.Block" alias="Block" />
		<typeAlias type="com.decoblog.www.blog.vo.BlockTemplate" alias="BlockTemplate" />
		<typeAlias type="com.decoblog.www.blog.vo.Menu" alias="Menu" />
		<typeAlias type="com.decoblog.www.blog.vo.Template" alias="Template" />
		
		<!-- com.decoblog.www.board -->
		<typeAlias type="com.decoblog.www.board.vo.Board" alias="Board" />
		<typeAlias type="com.decoblog.www.board.vo.Bbs" alias="Bbs" />
		<typeAlias type="com.decoblog.www.board.vo.Reply" alias="Reply" />
		<typeAlias type="com.decoblog.www.board.vo.BbsAttach" alias="BbsAttach" />
		<typeAlias type="com.decoblog.www.board.vo.Like" alias="Like" />
		
		<!-- com.decoblog.www.stat -->
		<typeAlias type="com.decoblog.www.stat.vo.Stat" alias="Stat" />
	</typeAliases>

	<mappers>
		<mapper resource="mappers/UserMapper.xml" />
		<mapper resource="mappers/BlogMapper.xml" />
		<mapper resource="mappers/BoardMapper.xml" />
		<mapper resource="mappers/StatMapper.xml" />
	</mappers>

</configuration>